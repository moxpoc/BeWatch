<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/profileToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:navigationIcon="@drawable/ic_keyboard_arrow_left_black_24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/myProfile"

        app:titleMarginTop="30dp"
        >


    </android.support.v7.widget.Toolbar>


    <ProgressBar
        android:id="@+id/progressBarPedometr"
        style="?android:attr/progressBarStyle"
        android:layout_width="126dp"
        android:layout_height="126dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBarHeartRate"
        style="?android:attr/progressBarStyle"
        android:layout_width="80.18dp"
        android:layout_height="80.18dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="95.4dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profileToolbar" />

    <TextView
        android:id="@+id/textViewHeartRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="72"
        android:textColor="@color/colorPink"
        android:textSize="16sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/progressBarPedometr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textPulse" />

    <TextView
        android:id="@+id/textSteps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="123dp"
        android:layout_marginEnd="19dp"
        android:gravity="center"
        android:text="@string/Steps"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/progressBarPedometr"
        app:layout_constraintTop_toTopOf="@+id/profileToolbar" />

    <TextView
        android:id="@+id/textPulse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="123dp"
        android:layout_marginEnd="8dp"
        android:text="@string/Pulse"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/progressBarPedometr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profileToolbar" />

    <TextView
        android:id="@+id/textViewPedometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="19dp"
        android:text="1350"
        android:textColor="@color/colorBuriza"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/progressBarPedometr"
        app:layout_constraintTop_toBottomOf="@+id/textSteps" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/windowBackground"
        android:backgroundTint="@color/windowBackground"
        android:layout_marginTop="256dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></android.support.v7.widget.CardView>

    <android.support.design.widget.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/bottom_navigation"
        app:menu="@menu/bottom_menu"
        app:itemIconTint="@color/bottom_item_colors"
        app:itemTextColor="@color/bottom_item_colors"
        app:layout_constraintBottom_toBottomOf="parent"></android.support.design.widget.BottomNavigationView>

</android.support.constraint.ConstraintLayout>